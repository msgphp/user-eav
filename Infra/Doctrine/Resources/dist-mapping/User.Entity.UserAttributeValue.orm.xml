<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="MsgPhp\User\UserAttributeValue">
        <id name="attributeValue" association-key="true" />

        <one-to-one field="attributeValue" target-entity="MsgPhp\Eav\AttributeValue" fetch="EAGER">
            <cascade><cascade-all /></cascade>
            <join-column on-delete="CASCADE" />
        </one-to-one>

        <many-to-one field="user" target-entity="MsgPhp\User\User">
            <join-column on-delete="CASCADE" nullable="false" />
        </many-to-one>
    </mapped-superclass>

</doctrine-mapping>
